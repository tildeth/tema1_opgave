---
import EmployeeCard from "./EmployeeCard.astro";

const { data, theme = "light" } = Astro.props;
---

<section data-theme={theme}>
  <a href="/profile"><EmployeeCard img="src/assets/images/sarah.jpg" name="Sarah Jasmine" title="CEO at Company" description="Leverage agile frameworks to provide a robust synopsis for high level overviews." /></a>
	<EmployeeCard img="src/assets/images/john.jpg" name="John Carter" title="Manager" description="Leverage agile frameworks to provide a robust synopsis for high level overviews." />
	<EmployeeCard img="src/assets/images/daisy.jpg" name="Daisy Stella" title="CEO at Company" description="Leverage agile frameworks to provide a robust synopsis for high level overviews." />
	<EmployeeCard img="src/assets/images/maya.jpg" name="Maya Elizabeth" title="CEO at Company" description="Leverage agile frameworks to provide a robust synopsis for high level overviews." />
	<EmployeeCard img="src/assets/images/ryan.png" name="Ryan Jackson" title="CEO at Company" description="Leverage agile frameworks to provide a robust synopsis for high level overviews." />
	<EmployeeCard img="src/assets/images/lilly.jpg" name="Lilly Victoria" title="CEO at Company" description="Leverage agile frameworks to provide a robust synopsis for high level overviews." />
</section>

<style>
  @layer components {
    [data-theme="dark"] {
      --bg-section: red;
      --text-section: #fff;
      --bg-card: blue;
      --text-card: #fff;
    }

    section {
      padding: 2rem;
      display: grid;
      grid-template-columns: auto auto auto;
      margin: 10%;
      gap: 15px;

      a{
        text-decoration: none;
        color: var(--text-color);
      }
    }
  }
</style>
