---
import BaseLayout from "../layouts/BaseLayout.astro";

import EmployeeSection from "../components/EmployeeSection.astro";

const employeeData = await fetch(
	"https://raw.githubusercontent.com/tildeth/frontend-design/main/resources/json/employees.json"
).then((res => res.json()));

const firstThreeEmployees = employeeData.slice(0,3);

---
<BaseLayout title="Home" >
	<EmployeeSection data={firstThreeEmployees} theme="dark" />
	<EmployeeSection data={employeeData} theme="light" />
</BaseLayout>
